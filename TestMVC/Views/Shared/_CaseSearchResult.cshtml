@using CommonObjectLibraryCore
@model List<Case>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover table-sm">
    <thead>
        <tr>
            <th>
                Case Reference
            </th>
            <th>
                Client Name
            </th>
            <th>
                Borrower Names
            </th>
            <th>
                Client Reference
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="CaseDetail" asp-action="Index" asp-route-id="@b.CaseId">@b.CaseReference</a>

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => b.Client.ClientName)
                    </td>
                    <td></td>
                    <td>
                        @Html.DisplayFor(modelItem => b.ClientReference)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Sorry, no cases found matching your search criteria</p>
}
