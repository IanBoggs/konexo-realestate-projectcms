@using CommonObjectLibraryCore
@using TestMVC.Models
@model Case
@{
    ViewData["Title"] = $"Edit Case {@Model.CaseReference}";
}
@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
<div class="text-center">
    <h1 class="display-4">Edit Case @Model.CaseReference</h1>
    <p>Select the new case detail below</p>
    <form method="post">
        @Html.HiddenFor(model => model.CaseId)
        <table class="table table-striped table-hover">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.CaseReference)
                </td>
                <td>
                    @Html.DisplayFor(model => model.CaseReference)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.CurrentStatus)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.CurrentStatusId,
                    new SelectList(ViewBag.CurrentStatusId,"Value","Text"),"-Select Status-",new { @class =
                    "form-control" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.CaseHandler)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.CaseHandlerId,
                    new SelectList(ViewBag.CaseHandlerId,"Value","Text"),"-Select Case Handler-",new { @class =
                    "form-control" })
                    <span asp-validation-for="@Model.CaseHandlerId" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Client.ClientName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Client.ClientName)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.ClientReference)
                </td>
                <td>
                    @Html.EditorFor(model => model.ClientReference)
                </td>
            </tr>
        </table>
        <p><button type="submit">Submit</button></p>
        <a asp-action="Index" asp-route-id="@Model.CaseId">Back to List</a>
    </form>

</div>